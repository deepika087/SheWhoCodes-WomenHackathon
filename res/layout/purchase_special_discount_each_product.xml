<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/productFinalCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/productSpecialDiscount"
        android:layout_marginRight="14dp"
        android:text="Rs. 7500" />

    <TextView
        android:id="@+id/productSpecialDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/productCost"
        android:layout_alignBottom="@+id/productCost"
        android:layout_alignRight="@+id/productFinalCost"
        android:text="-25%"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/productCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/productDescription"
        android:layout_below="@+id/productDescription"
        android:text="Rs. 10000"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/productDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/productImage"
        android:text="Lenove Laptop" />

    <ImageView
        android:id="@+id/productSponsor"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/productSpecialDiscount"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>
