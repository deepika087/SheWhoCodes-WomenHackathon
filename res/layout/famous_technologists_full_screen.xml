<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
	    android:id="@+id/ItemIcon"
	    android:layout_width="70dp"
	    android:layout_height="60dp"
	    android:padding="5dp" />

    <TextView
        android:id="@+id/technologist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ItemIcon"
        android:padding="2dp"
        android:textSize="18sp"
        android:text="Merrisa Mayer"
        android:capitalize="words"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#2811f5" />

    <TextView
        android:id="@+id/technologist_designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/technologist_name"
        android:layout_below="@+id/technologist_name"
        android:text="Yahoo - COO"
        android:textAllCaps="true"
        android:textColor="#20b2aa"
        android:textStyle="italic"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/introduction"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ItemIcon"
        android:ems="10"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"/>

    <TextView
        android:id="@+id/current_openings"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/introduction"
        android:layout_marginTop="14dp"
        android:text="Current Opening"
        android:textAllCaps="true"
        android:textColor="#2811f5"
        android:textStyle="bold|italic" />

</RelativeLayout>
