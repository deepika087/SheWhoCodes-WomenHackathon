<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.womenhackathon.MainActivity" >

    <Button
        android:id="@+id/becomeMentor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button1"
        android:layout_marginTop="67dp"
        android:layout_toLeftOf="@+id/button1"
        android:background="@drawable/mentors" />

    <Button
        android:id="@+id/shopAtDiscount"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/postProject"
        android:layout_alignBottom="@+id/postProject"
        android:layout_toRightOf="@+id/button1"
        android:background="@drawable/tech_women" />

    <Button
        android:id="@+id/meetTechnologists"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/shopAtDiscount"
        android:layout_alignTop="@+id/viewProject"
        android:background="@drawable/womenintech" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:background="@drawable/girl_with_computer" />

    <Button
        android:id="@+id/findMentor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/becomeMentor"
        android:layout_below="@+id/becomeMentor"
        android:layout_marginTop="32dp"
        android:background="@drawable/findamentor" />

    <Button
        android:id="@+id/viewProject"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/postProject"
        android:layout_alignTop="@+id/findMentor"
        android:background="@drawable/findidea" />

    <Button
        android:id="@+id/postProject"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/becomeMentor"
        android:layout_alignBottom="@+id/becomeMentor"
        android:layout_centerHorizontal="true"
        android:background="@drawable/giveidea" />

</RelativeLayout>